=render 'modules/header'
.bread-crumbs
  - breadcrumb :caregories
  = breadcrumbs separator: " &rsaquo; ", class: 'breadcrumbs-list'
.categories-box
  .whole
    .ichiran カテゴリー一覧
    .main
      - @parents.each do |parent|
        .cat-li
          =parent.name
    - @parents.each do |parent|
      .sub-cat
        .cat-li
          =parent.name   
        .child-box
          .child-all すべて    
          - parent.children.each do |child|
            .cat-child.others 
              = child.name
            .grand-children-box
              .cat-grand.all 
                = link_to "#{child.name}", category_path(child.id), id: :category_link
              - child.children.each do |grand|
                .cat-grand
                  = link_to "#{grand.name}",category_path(grand.id), id: :category_link

= render 'modules/banner'

= render 'modules/footer'

= render 'modules/sell-btn'
=render 'modules/header'

.items_whole
  .categories_line
  .items_box
    .items_box__title
      = @category.name + "の商品一覧"

    .items_box__contents
      - @items.first(3).each do |item|
        .items_list
          =link_to "items/#{item.id}" do
            %figure.items_list__img
              =image_tag @images.find_by(item_id: item.id).image.url
            .items_list__body
              %h3.items_list__body__name 
                =item.detail
              .items_list__body__details
                %ul
                  %li 
                    =item.price
                  %li
                    %i
                    0
                %p (税込)

= render 'modules/banner'

= render 'modules/footer'

= render 'modules/sell-btn'
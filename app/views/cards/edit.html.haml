.wrapper
  = render ('modules/header')
  .bread-crumbs
    - breadcrumb :mypage_card_in
    = breadcrumbs separator: " &rsaquo; ", class: 'breadcrumbs-list'
  .main
    =render ('modules/side-bar')
    .main__content
      %section.card-section
        %h2.card-section__title  クレジットカード情報入力

        = form_tag('/cards', method: :post, action: "create", id: 'charge-form',  name: "inputForm", class: "payment") do
          .payment__input
            .card_input
              %label カード番号
              %span.require 必須
              = text_field_tag "number", "", class: "top__margin input__deafult", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              %ul.card_list.top__margin
                %li
                  %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?73731125', width: '49', height: '20', alt: 'jcb'}
                %li
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?73731125", width: '34', height: '20'}
                %li
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?73731125", width: '30', height: '20'}
                %li
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?73731125", width: '32', height: '20'}
                %li
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?73731125", width: '21', height: '20'}
                %li
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?73731125", width: '32', height: '20'}
                %li
                  %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?73731125", width: '32', height: '20'}
            .card_input
              %label 有効期限
              %span.require 必須
              .select-box.top__margin
                .select-box__half
                  %select.select__default#exp_month{name: "exp_month", type: "text"}
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  = icon('fas', 'chevron-down')
                  %span 月
                .select-box__half
                  .icon
                  %select.select__default#exp_year{name: "exp_year", type: "text"}
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                    %option{value: "2029"}30
                  = icon('fas', 'chevron-down')
                  %span  年
            .card_input.top__margin
              %label セキュリティーコード
              %span.require 必須
              = text_field_tag "cvc", "", class: "input__deafult top__margin", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
              .single__code.top__margin
                %span.question-mark ? 
                %span カードの裏面の番号とは？
            #card_token
            = submit_tag "追加する", id: "token_submit", class: "top__margin"

  = render ('modules/sell-btn')
  = render ('modules/banner')
  = render ('modules/footer')